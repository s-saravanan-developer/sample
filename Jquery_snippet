    $(document).on('click','.master_checkbox',function(e){
        $('.delete_action').prop('disabled',false);

        if($(this).is(":checked"))
        {
           $('.checkbox_chid').prop('checked', true);
            get_all_checked_value();
        }else if($(this).is(":not(:checked)")){ 
            $('.checkbox_chid').prop('checked', false);
            var box = new Array();
            $('.selected_id').val(box);
            $('.delete_action').prop('disabled',true);
        }   
        find_all_checked_or_unchecked();     
  });

  $(document).on('click','.checkbox_chid',function(e){
        $('.delete_action').prop('disabled',false);
        if($(this).is(":checked"))
        {
            selected_value_push_box(this.value);
        }
        else if($(this).is(":not(:checked)")){        
            selected_value_pop_box(this.value);        
        }
        find_all_checked_or_unchecked();
  });

  function selected_value_push_box(value){
    var string = $('.selected_id').val();    
    if(string == ''){
        $('.selected_id').val(value);
    }else{
        var array = string.split(",");
        array.push(value);
        $('.selected_id').val(array); 
    }
       
  }

  function selected_value_pop_box(value){

    var string = $('.selected_id').val();
    if(string == ''){
        $('.selected_id').val(value);
    }else{
    var array = string.split(",");

    var index = array.indexOf(value);
    if (index > -1) {
      array.splice(index, 1);
    }
    $('.selected_id').val(array);
    }    
  }

  function get_all_checked_value(){

    var box = new Array();
    $(".checkbox_chid").each(function() {
        box.push(this.value);
    });
    $('.selected_id').val(box);
  }

  function find_all_checked_or_unchecked(){
    var check_filter = new Array();
        $.each($(".checkbox_chid:checked"), function(){            
                check_filter.push($(this).val());
        });

     if(check_filter.length === 0){
        $('.delete_action').prop('disabled',true);
     }else{
        $('.delete_action').prop('disabled',false);        
     }
  }

