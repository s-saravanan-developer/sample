ONLY NUMBERS

$(document).ready(function () {
  //called when key is pressed in textbox
  $("#quantity").keypress(function (e) {
     //if the letter is not digit then display error and don't type anything
     if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
        //display error message
        $("#errmsg").html("Digits Only").show().fadeOut("slow");
               return false;
    }
   });
});



VALIDATION INPUT

https://jsfiddle.net/emkey08/zgvtjc51

// Install input filters.
setPatternFilter("intTextBox", /^-?\d*$/);
setIntegerFilter("intLimitTextBox", 1500);
setPatternFilter("uintTextBox", /^\d*$/);
setPatternFilter("hexTextBox", /^[0-9a-f]*$/i);
setPatternFilter("floatTextBox", /^-?\d*\.?\d*$/);
setPatternFilter("currencyTextBox", /^-?\d*\.?\d{0,2}$/);

// Restricts input for the given DOM ID to the given regex pattern.
function setPatternFilter(id, pattern) {
  setInputFilter(document.getElementById(id), function(value) { return pattern.test(value); });
}


