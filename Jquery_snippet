function range_quantity(id){
   var value = $('.qty_'+id).val();
    if ((value !== '') && (value.indexOf('.') === -1)) {
        $('.qty_'+id).val(Math.max(Math.min(value, $('.quantity_val_'+id).val()), -$('.quantity_val_'+id).val()));
    }
}
    
CHECK DUPLICATION

$(document).ready(function() {
    var names = ['vadim', 'thomas', 'tanya', 'timur', 'eve', 'kate', 'karen', 'peter'];

    $('#check').click(function() {
        var name = $('#name').val();
        if (jQuery.inArray(name, names)!='-1') {
            alert(name + ' is in the array!');
        } else {
            alert(name + ' is NOT in the array...');
        }
    });
});
    
    
