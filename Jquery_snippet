function dup_check(){
   var seen = {};
      $('#bs4-table .check').each(function() 
      {
          var index =  $(this).index();
          var txt = $(this).text();
          if (seen[index] === txt) 
          {
              $(this).text('');
          }
          else 
          {
              seen[index] = txt;
          }
      });
} 
    

