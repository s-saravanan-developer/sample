var flg = ''
// $(document).ready(function() {
    $('#save_model').click(function(e) {
        var isValid = true;
        $('input[type="text"]:required').each(function() {
            if ($.trim($(this).val()) == '') {
                isValid = false;
                $(this).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });
                 flg = 1;
            }
            else {
                $(this).css({
                    "border": "",
                    "background": ""
                });
                 flg = 0;
            }
        });
        if (isValid == false) 
            e.preventDefault();

         if(flg === 0){
            $("#date_model").modal("show");
         }
    });
                                                                  
