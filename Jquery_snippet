DUPLICATE INPUT CHECK

var arr = [];
$("input").each(function(){
    var value = $(this).val();
    if (arr.indexOf(value) == -1)
        arr.push(value);
    else
        $(this).addClass("duplicate");
});

.duplicate {
    border: 1px solid red;
    color: red;
}

